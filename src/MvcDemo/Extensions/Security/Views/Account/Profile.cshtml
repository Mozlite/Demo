@{
    Layout = "_Admin";
    ViewData["Title"] = "编辑个人资料";
    var currentUser = Model.User;
}

@model UserProfile
    

<div class="content-wrapper">
    <div class="content-container">
        <form method="post" class="form settings customScrollBar">
            <div class="form-title">
                个人资料
            </div>
            <hr />
            <div class="form-desc">
                QQ:
            </div>
            <div class="form-group">
                <input asp-for="QQ" type="text" autocomplete="off" class="form-control w200" />
            </div>
            <div class="form-desc">
                微信:
            </div>
            <div class="form-group">
                <input asp-for="Weixin" type="text" autocomplete="off" class="form-control w200" />
            </div>
            <div class="form-desc">
                微博:
            </div>
            <div class="form-group">
                <input asp-for="Weibo" type="text" autocomplete="off" class="form-control w200" />
            </div>
            <hr />
            <div class="form-title">个人简介</div>
            <div class="form-group">
                <textarea asp-for="Intro" class="form-control" rows="5"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">更新个人信息</button>
        </form>
    </div>
</div>